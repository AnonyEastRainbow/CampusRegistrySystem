<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Location__c</field>
        <field>ClassRoom__c</field>
        <field>Borrower__c</field>
        <field>Phone__c</field>
        <field>TeachingSupply__c</field>
        <field>Quantity__c</field>
        <field>BorrowingStartDateAndTime__c</field>
        <field>BorrowingEndDateAndTime__c</field>
        <field>SecondaryCollegeLookup__c</field>
        <field>Class__c</field>
        <field>Remark__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>zhangliqiang@njtc.edu.cn</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>SecondaryCollegeLookup__r.Name = &apos;人工智能学院&apos;</formula>
        </entryCriteria>
        <ifCriteriaNotMet>RejectRecord</ifCriteriaNotMet>
        <label>格致楼人工智能学院教学用品管理员审批</label>
        <name>GezhiBuilding_AI_Admin_BorrowingApprovalStep</name>
    </approvalStep>
    <emailTemplate>RegistrySystemFolder/TeachingSupplyBorrowingApplicationApprovalNotification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>TeachingSupplyBorrowingApplication__c.ApprovalStatus__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>TeachingSupplyBorrowingApplication__c.Location__c</field>
            <operation>equals</operation>
            <value>GezhiBuilding</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_ActionFieldUpdate</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejected_ActionFieldUpdate</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Submit_ActionFieldUpdate</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>格致楼教学用品借用审批</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Removed_ActionFieldUpdate</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
